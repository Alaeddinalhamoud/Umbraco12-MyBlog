@model MyBlog.Domain.Models.ViewComponentModels.HeaderView

@if (Model != null)
{
    <header class="masthead" style="background-image: url('@Model?.Imageurl')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    @if (Model?.IsBlog ?? false)
                    {
                        <div class="post-heading">
                            <h1>@Model?.Title</h1>
                            <h2 class="subheading">@Model?.SubTitle</h2>
                            <span class="meta">
                                Posted by
                                <a href="@Model?.AuthorUrl">@Model?.CreatedBy</a>
                                on @Model?.CreatedDate
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="site-heading">
                            <h1>@Model?.Title</h1>
                            <span class="subheading">@Model?.SubTitle</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </header>
}